<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.behavior.drawer"
    >

  <application
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".DrawerBehaviorActivity"
        android:label="Drawer Behavior"
        android:taskAffinity="drawer.behavior"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".DrawerLayoutActivity"
        android:label="Drawer Layout"
        android:taskAffinity="drawer.layout"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>
</manifest>
